<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.jujoru.ejemplodialogs.MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dialogAlerta"
        android:text="Dialog Alerta" />

    <Button
        android:id="@+id/button2"
        android:onClick="dialogConfiramcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog confirmacion" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dialogSeleccion"
        android:text="Dialog Seleccion" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dialogSeleccionRadio"
        android:text="Dialog Seleccion Radio" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:onClick="dialogMultiSeleccion"
        android:layout_height="wrap_content"
        android:text="Dialog multiseleccion" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dialogPersonalizado"
        android:text="Dialog Custom" />
</LinearLayout>
